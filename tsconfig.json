{
  "extends": "@tsconfig/node16/tsconfig.json",
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/test-utils.ts"],
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["es2021", "dom"],
    "sourceMap": true,
    "rootDir": "./src",
    "declarationMap": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "types": ["jest"]
  },
  "include": ["src/**/*"]
}
